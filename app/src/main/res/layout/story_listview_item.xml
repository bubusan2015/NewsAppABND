<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/default_padding"
    >

    <TextView
        android:id="@+id/tv_story_title_listview_item"
        tools:text="this is a the title of my news"
        android:textColor="@color/text_color_1"
        android:textSize="@dimen/details_font_size_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/default_margin"
        android:orientation="horizontal"
         >
        <TextView
            android:id="@+id/tv_story_section_listview_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_2"
            android:textSize="@dimen/details_font_size_2"
            android:layout_weight="5"
            android:textAllCaps="true"
            tools:text="TECHNOLOGY"
            android:gravity="left"
            />
        <TextView
            android:id="@+id/tv_story_date_listview_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textColor="@color/text_color_2"
            android:textSize="@dimen/details_font_size_2"
            tools:text="2018-12-31"
            android:gravity="right"
            />
    </LinearLayout>
</LinearLayout>